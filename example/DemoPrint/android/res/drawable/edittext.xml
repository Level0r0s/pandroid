<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_window_focused="false" android:state_enabled="false">
        <shape>
           <solid
              android:color="@color/BackgroundColor04" />

            <stroke
                android:width="0dp"
                android:color="@color/LineColor04"
                android:dashWidth="10dip" 
                android:dashGap="20dip" />
            <corners
                android:radius="0dp" />
            <padding
                android:left="10dp"
                android:top="5dp"
                android:right="10dp"
                android:bottom="5dp" />
        </shape>
         
    </item>

    <item android:state_focused="true">
       <shape>
            <solid
                android:color="@color/BackgroundEditColor04" />
            <stroke
                android:width="0.2dp"
                android:color="@color/LineEditColor04"
                android:dashWidth="10dip" 
                android:dashGap="20dip" />

            <corners
                android:radius="0dp" />
            <padding
                android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp" />
        </shape>
      
    </item>

</selector>


